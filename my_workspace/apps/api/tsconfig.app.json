{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "sourceMap": true,
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "paths": {
    "@my-workspace/models/*": ["libs/models/src/lib/*"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "**/*.spec.ts", "**/*.test.ts"]
}
